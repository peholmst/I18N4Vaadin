<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>addon</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>*:i18n4vaadin-api:*</include>
                <include>*:i18n4vaadin-ap:*</include>
                <include>*:i18n4vaadin-cdi:*</include>
                <include>*:i18n4vaadin-simple:*</include>
            </includes>
            <binaries>
                <unpack>false</unpack>
                <outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <outputDirectory>src</outputDirectory>
            <directory>target/sources</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>META-INF</outputDirectory>
            <directory>src/assemble</directory>
            <includes>
                <include>MANIFEST.MF</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>ap-dependencies</outputDirectory>
            <includes>
                <include>*:velocity:*</include>
                <include>*:commons-lang:*</include>
                <include>*:commons-collections:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>